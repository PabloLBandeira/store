<% cache @product do %>
  <h1><%= @product.name %></h1>

  <% if @product.featured_image.attached? %>
    <%= image_tag @product.featured_image, style: "min-width: 200px; max-width: 400px; height: auto;" %>
  <% end %>

  <p><strong>Price:</strong> <%= @product.price ? "R$ #{'%.2f' % @product.price}" : "-" %></p>
  <p><strong>Description:</strong> <%= @product.description.presence || "-" %></p>
<% end %>

<%= render "inventory", product: @product %>

<% if authenticated? %>
  <%= link_to "Edit", edit_product_path(@product) %>
  <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
<% end %>

<%= link_to "Back", products_path %>





